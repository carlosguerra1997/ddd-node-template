{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strictNullChecks": true,
    "target": "ES6",
    "paths": {
      "@config/*": ["src/config/*"],
      "@shared/*": ["src/Shared/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules"]
}